@model IEnumerable<CourseBooking>
@using Online_Course_Portal_Web.Models
@using Online_Course_Portal_DataAccess.Model


<h2>Course Booking List</h2>
@*<div class="col text-end pt-1">
    <a asp-controller="CourseBooking" asp-action="CreateBooking" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i>Create Course</a>
</div>*@

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Course Name</th>
                <th>Course Description</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Available Seats</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var result in Model)
            {
               
                <tr>

                    <td>@result.Course.courseName</td>
                    <td>@result.Course.courseDescription</td>
                    
                    <td>@result.Course.StartDate</td>
                    <td>@result.Course.EndDate</td>
                    <td>@result.Course.AvailableSeats</td>
                  

                    <td>
                        <form asp-action="CreateBooking" method="post">
                            <input type="hidden" name="courseId" value="@result.CourseId" />
                            <button type="submit">Enroll</button>
                        </form>
                        <form asp-action="DeleteBooking" method="post">
                            <input type="hidden" name="id" value="@result.CourseId" />
                            <button type="submit">Delete</button>
                        </form>
                       @* <a asp-action="CreateBooking" asp-route-id="@result.CourseId">Enroll</a>
                        <a asp-action="DeleteBooking" asp-route-id="@result.CourseId">Delete</a>*@

                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No Course available.</p>
}
