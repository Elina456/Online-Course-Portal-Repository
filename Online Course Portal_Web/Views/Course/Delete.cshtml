
@model Course


<h1>Delete Course</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post" asp-action="Delete">
            <div class="form-group">
                <label asp-for="courseName"></label>
                <input asp-for="courseName" class="form-control" readonly />
            </div>

            <div class="form-group">
                <label asp-for="courseDescription"></label>
                <textarea asp-for="courseDescription" class="form-control" readonly></textarea>
            </div>

            <div class="form-group">
                <label asp-for="StartDate"></label>
                <input asp-for="StartDate" type="date" class="form-control" readonly />
            </div>

            <div class="form-group">
                <label asp-for="EndDate"></label>
                <input asp-for="EndDate" type="date" class="form-control" readonly />
            </div>

            <div class="form-group">
                <label asp-for="AvailableSeats"></label>
                <input asp-for="AvailableSeats" type="number" class="form-control" readonly />
            </div>

            <input type="hidden" asp-for="Id" />

            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-controller="Course"  asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>
